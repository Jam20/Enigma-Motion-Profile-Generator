                <!--Zones-->
                <Line X1="0" X2="324" Y1="120" Y2="120" Stroke="Black" StrokeThickness="1"/>
                <Rectangle Canvas.Top="99" Canvas.Left="138" Width="45" Height="42" Fill="Blue" Stroke="Gray" StrokeThickness="1"/>
                <Rectangle Canvas.Top="0" Canvas.Left="166" Width="48" Height="36" Fill="Blue" Stroke="Gray" StrokeThickness="1"/>


                <Line Y1="196" X1="95" X2="95" Y2="452" Stroke="Black" StrokeThickness="1"/>
                <Line Y1="196" X1="229" X2="229" Y2="452" Stroke="Black" StrokeThickness="1"/>

                <Line X1="0" Y1="288" X2="95" Y2="288" Stroke="White" StrokeThickness="2"/>
                <Line X1="0" Y1="360" X2="95" Y2="360" Stroke="White" StrokeThickness="2"/>

                <Line X1="229" Y1="288" X2="324" Y2="288" Stroke="White" StrokeThickness="2"/>
                <Line X1="229" Y1="360" X2="324" Y2="360" Stroke="White" StrokeThickness="2"/>

                <Line X1="0" X2="324" Y1="528" Y2="528" Stroke="Black" StrokeThickness="1"/>
                <Rectangle Canvas.Top="508" Canvas.Left="138" Width="45" Height="42" Fill="Red" Stroke="Gray" StrokeThickness="2"/>
                <Rectangle Canvas.Top="612" Canvas.Left="166" Width="48" Height="36" Fill="Red"  Stroke="Gray" StrokeThickness="2"/>



                <!--Switch 1-->
                <Rectangle Canvas.Top="140" Canvas.Left="85" Width="154" Height="56" Stroke="black" Fill="LightGray" StrokeThickness="1"/>
                <Rectangle Canvas.Top="144" Canvas.Left="89" Width="36" Height="48" Fill="Gray" Stroke="Black" StrokeThickness="1"/>
                <Rectangle Canvas.Top="162" Canvas.Left="124" Width="78" Height="12" Fill="White" Stroke="Black" StrokeThickness="1"/>
                <Rectangle Canvas.Top="144" Canvas.Left="199" Width="36" Height="48" Fill="Gray" Stroke="Black" StrokeThickness="1"/>

                <!--Switch 2-->
                <Rectangle Canvas.Top="452" Canvas.Left="85" Width="154" Height="56" Fill="LightGray" Stroke="black" StrokeThickness="1"/>
                <Rectangle Canvas.Top="456" Canvas.Left="89" Width="36" Height="48" Fill="Gray" Stroke="Black" StrokeThickness="1"/>
                <Rectangle Canvas.Top="474" Canvas.Left="124" Width="78" Height="12" Fill="White" Stroke="Black" StrokeThickness="1"/>
                <Rectangle Canvas.Top="456" Canvas.Left="199" Width="36" Height="48" Fill="Gray" Stroke="Black" StrokeThickness="1"/>

                <!--Scale-->

                <Rectangle Canvas.Top="300" Canvas.Left="72" Width="36" Height="48" Stroke="Black" Fill="Gray" StrokeThickness="1"/>
                <Rectangle Canvas.Top="300" Canvas.Left="212" Width="36" Height="48" Stroke="Black" Fill="Gray" StrokeThickness="1"/>
                <Rectangle Canvas.Top="312" Canvas.Left="108" Width="104" Height="24" Fill="Yellow" Stroke="Black" StrokeThickness="1"/>
                <Line X1="160" Y1="312" X2="160" Y2="336" StrokeThickness="1" Stroke="Black"/>

                <!--Ramp-->
                <Polygon Points="95,261,229,261,212,271,108,271" Fill="Blue"  Stroke="Black" StrokeThickness="1"/>
                <Polygon Points="95,261,95,300,108,300,108,271" Fill="Blue" Stroke="Black" StrokeThickness="1"/>
                <Polygon Points="229,261,229,300,212,300,212,271" Fill="Blue" Stroke="Black" StrokeThickness="1"/>
                <Polygon Points="108,271,212,271,212,312,108,312" Fill="Blue" Stroke="Black" StrokeThickness="1"/>

                <Polygon Points="95,387,229,387,212,377,108,377" Fill="Red" Stroke="Black" StrokeThickness="1"/>
                <Polygon Points="95,387,95,348,108,348,108,377" Fill="Red" Stroke="Black" StrokeThickness="1"/>
                <Polygon Points="229,387,229,348,212,348,212,377" Fill="Red" Stroke="Black" StrokeThickness="1"/>
                <Polygon Points="108,377,212,377,212,336,108,336" Fill="Red" Stroke="Black" StrokeThickness="1"/>

                <!--Cubes-->
                <Rectangle Canvas.Top="508" Canvas.Left="154" Width="13" Height="13" Fill="Yellow" Stroke="Black" StrokeThickness="1"/>
                <Rectangle Canvas.Top="508" Canvas.Left="141" Width="13" Height="13" Fill="Yellow" Stroke="Black" StrokeThickness="1"/>
                <Rectangle Canvas.Top="508" Canvas.Left="167" Width="13" Height="13" Fill="Yellow" Stroke="Black" StrokeThickness="1"/>
                <Rectangle Canvas.Top="521" Canvas.Left="147" Width="13" Height="13" Fill="Yellow" Stroke="Black" StrokeThickness="1"/>
                <Rectangle Canvas.Top="521" Canvas.Left="160" Width="13" Height="13" Fill="Yellow" Stroke="Black" StrokeThickness="1"/>
                <Rectangle Canvas.Top="534" Canvas.Left="154" Width="13" Height="13" Fill="Yellow" Stroke="Black" StrokeThickness="1"/>

                <Rectangle Canvas.Top="127" Canvas.Left="154" Width="13" Height="13" Fill="Yellow" Stroke="Black" StrokeThickness="1"/>
                <Rectangle Canvas.Top="127" Canvas.Left="141" Width="13" Height="13" Fill="Yellow" Stroke="Black" StrokeThickness="1"/>
                <Rectangle Canvas.Top="127" Canvas.Left="167" Width="13" Height="13" Fill="Yellow" Stroke="Black" StrokeThickness="1"/>
                <Rectangle Canvas.Top="114" Canvas.Left="147" Width="13" Height="13" Fill="Yellow" Stroke="Black" StrokeThickness="1"/>
                <Rectangle Canvas.Top="114" Canvas.Left="160" Width="13" Height="13" Fill="Yellow" Stroke="Black" StrokeThickness="1"/>
                <Rectangle Canvas.Top="101" Canvas.Left="154" Width="13" Height="13" Fill="Yellow" Stroke="Black" StrokeThickness="1"/>

                <Rectangle Canvas.Top="196" Canvas.Left="85" Width="13" Height="13" Fill="Yellow" Stroke="Black" StrokeThickness="1"/>
                <Rectangle Canvas.Top="196" Canvas.Left="109" Width="13" Height="13" Fill="Yellow" Stroke="Black" StrokeThickness="1"/>
                <Rectangle Canvas.Top="196" Canvas.Left="133" Width="13" Height="13" Fill="Yellow" Stroke="Black" StrokeThickness="1"/>
                <Rectangle Canvas.Top="196" Canvas.Left="157" Width="13" Height="13" Fill="Yellow" Stroke="Black" StrokeThickness="1"/>
                <Rectangle Canvas.Top="196" Canvas.Left="180" Width="13" Height="13" Fill="Yellow" Stroke="Black" StrokeThickness="1"/>
                <Rectangle Canvas.Top="196" Canvas.Left="203" Width="13" Height="13" Fill="Yellow" Stroke="Black" StrokeThickness="1"/>
                <Rectangle Canvas.Top="196" Canvas.Left="226" Width="13" Height="13" Fill="Yellow" Stroke="Black" StrokeThickness="1"/>

                <Rectangle Canvas.Top="439" Canvas.Left="85" Width="13" Height="13" Fill="Yellow" Stroke="Black" StrokeThickness="1"/>
                <Rectangle Canvas.Top="439" Canvas.Left="109" Width="13" Height="13" Fill="Yellow" Stroke="Black" StrokeThickness="1"/>
                <Rectangle Canvas.Top="439" Canvas.Left="133" Width="13" Height="13" Fill="Yellow" Stroke="Black" StrokeThickness="1"/>
                <Rectangle Canvas.Top="439" Canvas.Left="157" Width="13" Height="13" Fill="Yellow" Stroke="Black" StrokeThickness="1"/>
                <Rectangle Canvas.Top="439" Canvas.Left="180" Width="13" Height="13" Fill="Yellow" Stroke="Black" StrokeThickness="1"/>
                <Rectangle Canvas.Top="439" Canvas.Left="203" Width="13" Height="13" Fill="Yellow" Stroke="Black" StrokeThickness="1"/>
                <Rectangle Canvas.Top="439" Canvas.Left="226" Width="13" Height="13" Fill="Yellow" Stroke="Black" StrokeThickness="1"/>


            </Canvas>

        </Grid>
        
        <!--Column Two-->
        <StackPanel Name="ColumnTwoStackPanel" Grid.Column="1" Visibility="Visible" >
            <StackPanel Orientation="Horizontal" Background="LightGray">
                <Rectangle Fill="Black" Width="2" Margin="0,0,3,0"/>
                <StackPanel Name="SegmentPopOutStackPanel" Visibility="Collapsed">
                    <TextBlock Text="Segment Selector" FontSize="30" Margin="0,0,10,0" HorizontalAlignment="Center"/>
                    <ComboBox Name="SegmentSelectorComboBox" HorizontalAlignment="Stretch" Margin="0,10,0,0" SelectionChanged="SegmentSelectorComboBox_SelectionChanged"/>
                    <Rectangle HorizontalAlignment="Stretch" Height="30"/>
                    <TextBlock Text="Segment Editor" FontSize="30" HorizontalAlignment="Center"/>
                    <TextBlock Text="Editor Style" FontFamily="20" Margin="0,10,0,0" HorizontalAlignment="Center"/>
                    <ToggleSwitch Name="EditorStyleToggleSwitch" HorizontalAlignment="Center" OnContent="Degrees" OffContent="Coordinates" Toggled="ToggleSwitch_Toggled" FontSize="15"/>

                    <StackPanel Name="CoordinateModeStackPanel" Visibility="Visible">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>


                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Control Point One" HorizontalAlignment="Center"/>
                                <StackPanel Orientation="Horizontal">
                                    <TextBox Name="ControlPointOneXTextBox" Margin="0,5,10,0" HorizontalAlignment="Center"/>
                                    <TextBox Name="ControlPointOneYTextBox" Margin="0,5,0,0" HorizontalAlignment="Center"/>
                                </StackPanel>
                                <TextBlock Text="Control Point Two" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                                <StackPanel Orientation="Horizontal">
                                    <TextBox Name="ControlPointThreeXTextBox" Margin="0,5,10,0" HorizontalAlignment="Center"/>
                                    <TextBox Name="ControlPointThreeYTextBox" Margin="0,5,0,0" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                <TextBlock Text="Control Point One" HorizontalAlignment="Center"/>
                                <StackPanel Orientation="Horizontal">
                                    <TextBox Name="ControlPointTwoXTextBox" Margin="0,5,10,0" HorizontalAlignment="Center"/>
                                    <TextBox Name="ControlPointTwoYTextBox" Margin="0,5,0,0" HorizontalAlignment="Center"/>
                                </StackPanel>
                                <TextBlock Text="Control Point Two" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                                <StackPanel Orientation="Horizontal">
                                    <TextBox Name="ControlPointFourXTextBox" Margin="0,5,10,0" HorizontalAlignment="Center"/>
                                    <TextBox Name="ControlPointFourYTextBox" Margin="0,5,0,0" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                        <Button Grid.Column="0" Name="CoordinateSaveButton" Content="Save" FontSize="12" HorizontalAlignment="Stretch" Click="CoordinateSaveButton_Click"  Grid.Row="1" Margin="0,5,0,3"/>
                    </StackPanel>
                    <StackPanel Name="DegreeModeStackPanel" Visibility="Collapsed">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Start Point" HorizontalAlignment="Center"/>
                                <StackPanel Orientation="Horizontal">
                                    <TextBox Name="StartPointXTextBlock" Margin="0,5,10,0" HorizontalAlignment="Center"/>
                                    <TextBox Name="StartPointYTextBlock" Margin="0,5,0,0" HorizontalAlignment="Center"/>
                                </StackPanel>
                                <TextBlock Text="Starting Angle" Margin="0,7,0,0" HorizontalAlignment="Center"/>
                                <TextBox Name="StartingAngleXTextBlock" Margin="0,5,10,0" HorizontalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                <TextBlock Text="End Point" HorizontalAlignment="Center"/>
                                <StackPanel Orientation="Horizontal">
                                    <TextBox Name="EndPointXTextBlock" Margin="0,5,10,0" HorizontalAlignment="Center"/>
                                    <TextBox Name="EndPointYTextBlock" Margin="0,5,0,0" HorizontalAlignment="Center"/>
                                </StackPanel>
                                <TextBlock Text="Ending Angle" Margin="0,7,0,0" HorizontalAlignment="Center"/>
                                <TextBox Name="EndingAngleXTextBlock" Margin="0,5,10,0" HorizontalAlignment="Center"/>
                            </StackPanel>

                        </Grid>
                        <Button Name="SaveDegreeButton" Content="Save" FontSize="12" Click="SaveDegreeButton_Click" HorizontalAlignment="Stretch" Margin="0,7,0,3"/>
                    </StackPanel>
                </StackPanel>
                <StackPanel Name="LayerPopOutStackPanel" Visibility="Visible">
                    <TextBlock Text="Player Selector" FontSize="30" HorizontalAlignment="Center" Padding="20,0"/>
                    <ComboBox Name="PlayerSelectorComboBox" HorizontalAlignment="Stretch" Margin="0,10,0,10" SelectionChanged="PlayerSelectorComboBox_SelectionChanged"/>
                    <Grid Padding="0,5,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>

                        </Grid.ColumnDefinitions>
                        <Button Name="NewPlayerButton" Content="New Player" HorizontalAlignment="Center" Grid.Column="0" Click="NewPlayerButton_Click" />
                        <Button Name="DeletePlayerButton" Content="Delete Player" Grid.Column="1" HorizontalAlignment="Center" Click="DeletePlayerButton_Click" />
                    </Grid>
                    <TextBlock Text="Layer Selector" FontSize="30" HorizontalAlignment="Center"/>
                    <ComboBox Name="LayerSelectorComboBox" HorizontalAlignment="Stretch" Margin="0,10,0,0" SelectionChanged="LayerSelectorComboBox_SelectionChanged"/>
                    <Grid Padding="0,5,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>

                        </Grid.ColumnDefinitions>
                        <Button Name="NewLayerButton" Content="New Layer" HorizontalAlignment="Center" Grid.Column="0" Click="NewLayerButton_Click" />
                        <Button Name="DeleteLayerButton" Content="Delete Layer" Grid.Column="1" HorizontalAlignment="Center" Click="DeleteLayerButton_Click" />
                    </Grid>
                </StackPanel>

            </StackPanel>
            <Rectangle Fill="Black" Height="2"/>
        </StackPanel>
        
        <!--Column Three-->
        <StackPanel Grid.Column="2" Background="Gray" Width="Auto" FlowDirection="RightToLeft">

            <ListBox Name="RightNaviationListBox" SelectionMode="Single" Background="Gray">
                <ListBoxItem Name="SegmentListBoxItem" Content="Segments" Tapped="RightNavigationListBoxItem_Tapped"/>
                <ListBoxItem Name="LayerListBoxItem" Content="Layers" Tapped="RightNavigationListBoxItem_Tapped"/>
            </ListBox>
            
        </StackPanel>

    </Grid>
    
</Page>
