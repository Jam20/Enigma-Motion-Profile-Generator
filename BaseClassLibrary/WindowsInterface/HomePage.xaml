    <Grid Background="DarkGray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        
        <!--Column One-->
        <StackPanel Grid.Column="0">
            
        </StackPanel>
        
        <!--Column Two-->
        <StackPanel Grid.Column="1" >
            <StackPanel Orientation="Horizontal" Background="LightGray">
                <Rectangle Fill="Black" Width="2" Margin="0,0,3,0"/>
                <StackPanel Name="SegmentPopOutStackPanel" Visibility="Visible">
                    <TextBlock Text="Segment Selector" FontSize="30" Margin="0,0,10,0" HorizontalAlignment="Center"/>
                    <ComboBox HorizontalAlignment="Stretch" Margin="0,10,0,0" SelectionChanged="ComboBox_SelectionChanged"/>
                    <Rectangle HorizontalAlignment="Stretch" Height="30"/>
                    <TextBlock Text="Segment Editor" FontSize="30" HorizontalAlignment="Center"/>
                    <TextBlock Text="Editor Style" FontFamily="20" Margin="0,10,0,0" HorizontalAlignment="Center"/>
                    <ToggleSwitch Name="EditorStyleToggleSwitch" HorizontalAlignment="Center" OnContent="Degrees" OffContent="Coordinates" Toggled="ToggleSwitch_Toggled" FontSize="15"/>

                    <StackPanel Name="CoordinateModeStackPanel" Visibility="Visible">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>


                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Control Point One" HorizontalAlignment="Center"/>
                                <StackPanel Orientation="Horizontal">
                                    <TextBox Name="ControlPointOneXTextBox" Margin="0,5,10,0" HorizontalAlignment="Center"/>
                                    <TextBox Name="ControlPointOneYTextBox" Margin="0,5,0,0" HorizontalAlignment="Center"/>
                                </StackPanel>
                                <TextBlock Text="Control Point Two" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                                <StackPanel Orientation="Horizontal">
                                    <TextBox Name="ControlPointThreeXTextBox" Margin="0,5,10,0" HorizontalAlignment="Center"/>
                                    <TextBox Name="ControlPointThreeYTextBox" Margin="0,5,0,0" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                <TextBlock Text="Control Point One" HorizontalAlignment="Center"/>
                                <StackPanel Orientation="Horizontal">
                                    <TextBox Name="ControlPointTwoXTextBox" Margin="0,5,10,0" HorizontalAlignment="Center"/>
                                    <TextBox Name="ControlPointTwoYTextBox" Margin="0,5,0,0" HorizontalAlignment="Center"/>
                                </StackPanel>
                                <TextBlock Text="Control Point Two" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                                <StackPanel Orientation="Horizontal">
                                    <TextBox Name="ControlPointFourXTextBox" Margin="0,5,10,0" HorizontalAlignment="Center"/>
                                    <TextBox Name="ControlPointFourYTextBox" Margin="0,5,0,0" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                        <Button Grid.Column="0" Content="Save" FontSize="12" HorizontalAlignment="Stretch" Grid.Row="1" Margin="0,5,0,3"/>
                    </StackPanel>
                    <StackPanel Name="DegreeModeStackPanel" Visibility="Collapsed">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Start Point" HorizontalAlignment="Center"/>
                                <StackPanel Orientation="Horizontal">
                                    <TextBox Name="StartPointXTextBlock" Margin="0,5,10,0" HorizontalAlignment="Center"/>
                                    <TextBox Name="StartPointYTextBlock" Margin="0,5,0,0" HorizontalAlignment="Center"/>
                                </StackPanel>
                                <TextBlock Text="Starting Angle" Margin="0,7,0,0" HorizontalAlignment="Center"/>
                                <TextBox Name="StartingAngleXTextBlock" Margin="0,5,10,0" HorizontalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                <TextBlock Text="End Point" HorizontalAlignment="Center"/>
                                <StackPanel Orientation="Horizontal">
                                    <TextBox Name="EndPointXTextBlock" Margin="0,5,10,0" HorizontalAlignment="Center"/>
                                    <TextBox Name="EndPointYTextBlock" Margin="0,5,0,0" HorizontalAlignment="Center"/>
                                </StackPanel>
                                <TextBlock Text="Ending Angle" Margin="0,7,0,0" HorizontalAlignment="Center"/>
                                <TextBox Name="EndingAngleXTextBlock" Margin="0,5,10,0" HorizontalAlignment="Center"/>
                            </StackPanel>

                        </Grid>
                        <Button Name="SaveDegreeButton" Content="Save" FontSize="12" Click="SaveDegreeButton_Click" HorizontalAlignment="Stretch" Margin="0,7,0,3"/>
                    </StackPanel>
                </StackPanel>
                <StackPanel Name="LayerPopOutStackPanel" Visibility="Collapsed">

                </StackPanel>

            </StackPanel>
            <Rectangle Fill="Black" Height="2"/>
        </StackPanel>
        
        <!--Column Three-->
        <StackPanel Grid.Column="2" Background="Gray" Width="Auto" FlowDirection="RightToLeft">

            <ListBox Name="RightNaviationListBox" SelectionMode="Single" Background="Gray" SelectionChanged="RightNaviationListBox_SelectionChanged">
                <ListBoxItem Name="SegmentListBoxItem" Content="Segments"/>
                <ListBoxItem Name="LayerListBoxItem" Content="Layers"/>
                <ListBoxItem Name="CloseListBoxItem" Content="Close"/>
            </ListBox>
            
        </StackPanel>

    </Grid>
    
